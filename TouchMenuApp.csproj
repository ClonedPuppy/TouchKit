<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <!-- Hide platform project folders from the solution explorer -->
  <ItemGroup>
    <Compile Remove="Platforms\**" />
    <EmbeddedResource Remove="Platforms\**" />
    <None Remove="Platforms\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\Panel_v001.glb" />
    <None Remove="Assets\sexyCircle.hlsl" />
    <None Remove="Assets\TouchMenuTexture.png" />
    <None Remove="Assets\TouchMenuTexture.tga" />
    <None Remove="Assets\TouchPanelShader.hlsl" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Assets\Panel_v001.glb">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\TouchMenuTexture.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\TouchMenuTexture.tga">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <SKShader Include="Assets\sexyCircle.hlsl" />
    <SKShader Include="Assets\floor.hlsl" />
    <SKShader Include="Assets\TouchPanelShader.hlsl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </SKShader>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StereoKit" Version="0.3.7-preview.3" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Assets\sexyCircle.hlsl" />
  </ItemGroup>

</Project>
